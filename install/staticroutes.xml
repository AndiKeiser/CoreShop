<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <routes>
        <route>
            <name>coreshop_list</name>
            <pattern>/(.*?)\/shop\/(.*?)\~c([0-9]+)/</pattern>
            <reverse>/%lang/shop/%name~c%category</reverse>
            <module>CoreShop</module>
            <controller>product</controller>
            <action>list</action>
            <variables>lang,name,category</variables>
            <priority>2</priority>
        </route>
        <route>
            <name>coreshop_index</name>
            <pattern>/(.*?)\/shop/</pattern>
            <reverse>/%lang/shop</reverse>
            <module>CoreShop</module>
            <controller>index</controller>
            <action>index</action>
            <variables>lang</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_detail</name>
            <pattern>/(.*?)\/shop\/(.*?)\~p([0-9]+)/</pattern>
            <reverse>/%lang/shop/%name~p%product</reverse>
            <module>CoreShop</module>
            <controller>product</controller>
            <action>detail</action>
            <variables>lang,name,product</variables>
            <priority>3</priority>
        </route>
        <route>
            <name>coreshop_cart</name>
            <pattern>#(\w+)/cart/(\w+)#</pattern>
            <reverse>/%lang/cart/%act</reverse>
            <module>CoreShop</module>
            <controller>cart</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_checkout</name>
            <pattern>#(\w+)/checkout/(\w+)#</pattern>
            <reverse>/%lang/checkout/%act</reverse>
            <module>CoreShop</module>
            <controller>checkout</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_user</name>
            <pattern>#(\w+)/user/(\w+)#</pattern>
            <reverse>/%lang/user/%act</reverse>
            <module>CoreShop</module>
            <controller>user</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_search</name>
            <pattern>/(.*?)\/shop\/search/</pattern>
            <reverse>/%lang/shop/search</reverse>
            <module>CoreShop</module>
            <controller>search</controller>
            <action>search</action>
            <variables>lang</variables>
            <priority>5</priority>
        </route>
        <route>
            <name>coreshop_compare</name>
            <pattern>#(\w+)/compare/(\w+)#</pattern>
            <reverse>/%lang/compare/%act</reverse>
            <module>CoreShop</module>
            <controller>compare</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_change_currency</name>
            <pattern>#(\w+)/currency/change~c([0-9]+)#</pattern>
            <reverse>/%lang/currency/change~c%currency</reverse>
            <module>CoreShop</module>
            <controller>helper</controller>
            <action>change-currency</action>
            <variables>lang,currency</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_wishlist</name>
            <pattern>#(\w+)/wishlist/(\w+)#</pattern>
            <reverse>/%lang/wishlist/%act</reverse>
            <module>CoreShop</module>
            <controller>wishlist</controller>
            <action>%act</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
        <route>
            <name>coreshop_message</name>
            <pattern>#(\w+)/message/#</pattern>
            <reverse>/%lang/message</reverse>
            <module>CoreShop</module>
            <controller>message</controller>
            <action>index</action>
            <variables>lang,act</variables>
            <priority>1</priority>
        </route>
    </routes>
</zend-config>