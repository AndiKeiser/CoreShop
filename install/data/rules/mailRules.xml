<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <objects>
        <MailRule>
            <name>User Register</name>
            <description></description>
            <mailType>user</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\User\UserType</class>
                    <params>
                        <userType>register</userType>
                    </params>
                </condition>

            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/user-registered</de>
                            <en>/en/shop/email/user-registered</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>User Reset Password</name>
            <description></description>
            <mailType>user</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\User\UserType</class>
                    <params>
                        <userType>password-reset</userType>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/user-reset-password</de>
                            <en>/en/shop/email/user-reset-password</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>Order Shipped</name>
            <description></description>
            <mailType>order</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\Order\ShipmentState</class>
                    <params>
                        <shipmentState>2</shipmentState>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/order-shipped</de>
                            <en>/en/shop/email/order-shipped</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>Order Confirmation</name>
            <description></description>
            <mailType>order</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\Order\OrderState</class>
                    <params>
                        <transitionType>1</transitionType>
                        <states>new|</states>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/order-confirmation</de>
                            <en>/en/shop/email/order-confirmation</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>Message Contact</name>
            <description></description>
            <mailType>messaging</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\Messaging\MessageType</class>
                    <params>
                        <messageType>contact</messageType>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/message-contact</de>
                            <en>/en/shop/email/message-contact</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>Message Customer</name>
            <description></description>
            <mailType>messaging</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\Messaging\MessageType</class>
                    <params>
                        <messageType>customer</messageType>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/message-customer</de>
                            <en>/en/shop/email/message-customer</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>
        <MailRule>
            <name>Message Customer Reply</name>
            <description></description>
            <mailType>messaging</mailType>
            <conditions>
                <condition>
                    <class>Mail\Rule\Condition\Messaging\MessageType</class>
                    <params>
                        <messageType>customer-reply</messageType>
                    </params>
                </condition>
            </conditions>
            <actions>
                <action>
                    <class>Mail\Rule\Action\Mail</class>
                    <params>
                        <mails>
                            <de>/de/shop/email/message-customer-reply</de>
                            <en>/en/shop/email/message-contact-reply</en>
                        </mails>
                    </params>
                </action>
            </actions>
        </MailRule>

    </objects>
</zend-config>
