<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <mapped-superclass name="CoreShop\Component\Address\Model\Zone" table="coreshop_zone">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="active" column="active" type="boolean" />

        <one-to-many field="countries" target-entity="CoreShop\Component\Address\Model\CountryInterface" mapped-by="zone" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
            <order-by>
                <order-by-field name="name" direction="ASC" />
            </order-by>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
